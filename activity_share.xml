<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareActivity">

    <EditText
        android:id="@+id/editText_getPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_sendMessage"
        tools:ignore="MissingConstraints,UnknownId"
        android:layout_alignParentStart="true"
        android:hint="Enter the number of the phone."
        android:inputType="phone" />

    <Button
        android:id="@+id/button_createCall"
        android:layout_width="576dp"
        android:layout_height="438dp"
        android:layout_above="@id/button_sendMessage"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/editText_getPhoneNumber"
        android:text="@string/button_makeCall_text"
        tools:ignore="MissingConstraints,UnknownId"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="620dp" />

    <Button
        android:id="@+id/button_sendMessage"
        android:layout_width="477dp"
        android:layout_height="103dp"
        android:layout_above="@id/button_search_BB"
        android:layout_alignStart="@id/button_createCall"
        android:text="@string/button_sendMessage_text"
        tools:ignore="MissingConstraints,UnknownId"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="415dp" />

    <Button
        android:id="@+id/button_search_BB"
        android:layout_width="415dp"
        android:layout_height="152dp"
        android:layout_alignStart="@id/button_createCall"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/editText_getPhoneNumber"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="172dp" />
</androidx.constraintlayout.widget.ConstraintLayout>